generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

model Raffle {
  id           String   @id @default(cuid()) // ডাইনামিক ইউনিক আইডি
  entriesCount Int      @default(0)
  maxEntries   Int      @default(100)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  entries RaffleEntry[]
}

model RaffleEntry {
  id        String   @id @default(cuid())
  address   String
  txHash    String   @unique
  createdAt DateTime @default(now())

  raffleId String
  raffle   Raffle @relation(fields: [raffleId], references: [id])

  @@unique([address, raffleId])
  @@index([address])
}

model User {
  id            String   @id @default(uuid())
  username      String   @unique
  fidID         String   @unique
  walletAddress String   @unique
  totalRewards  Int      @default(0)
  totalSpins    Int      @default(0)
  balance       Int      @default(0)
  updatedAt     DateTime @updatedAt
  spins         Spin[]
  rewards       Reward[]
  createdAt     DateTime @default(now())
  mints         Mint[]   @relation("UserMints")
}

enum MintStatus {
  pending
  confirmed
  failed
}

model Mint {
  id              String     @id @default(uuid())
  walletAddress   String
  transactionHash String     @unique
  contractAddress String
  mintPrice       String
  nftType         String
  nftName         String
  status          MintStatus @default(pending)
  timestamp       DateTime   @default(now())

  user User @relation("UserMints", fields: [walletAddress], references: [walletAddress], onDelete: Cascade)

  @@index([walletAddress])
  @@index([timestamp])
}

model Spin {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  rewardValue Int
  isClaimed   Boolean   @default(false)
  claimedAt   DateTime?
  createdAt   DateTime  @default(now())

  @@index([userId])
}

model Reward {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  spinId      String
  rewardValue Int
  claimedAt   DateTime?
  createdAt   DateTime  @default(now())

  @@index([userId])
}

datasource db {
  provider = "postgresql"
}
